{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "devfile.*y[a]?ml$"
      ],
      "matchStrings": [
        "image: (?<depName>\\S*):(?<currentValue>\\S*)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "<registry>/<org>/{{{depName}}}"
    }
  ]
}
